@model electo.Models.CreateVolunteerLogin


@using (Html.BeginForm("Create", "Account"))
{
    <div class="modal-dialog createvolunteer-popup">
        <div class="modal-content">
            <div class="modal-header">
                <h4>New Volenteer Login</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="modelHeader"></h4>
            </div>
            <div class="modal-body">
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <label id="spn_regionalName"></label>&nbsp;&nbsp;&nbsp;<label id="spn_dob"></label>
                    <hr />

                    <input type="hidden" id="voterID" name="voterID" value='@ViewBag.voterID' />
                        <div class="form-group">
                            @Html.LabelFor(model => model.politicalPartyID, htmlAttributes: new { @class = "control-label" })
                            <div class="col-md-12">
                                @Html.DropDownListFor(model => model.politicalPartyID, new SelectList(ViewBag.PoliticalPartyID, "politicalPartyID", "politicalPartyName"), " Political Party  ", new { @class = "form-control" })

                                @Html.ValidationMessageFor(model => model.politicalPartyID, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.userTypeID, htmlAttributes: new { @class = "control-label" })
                            <div class="col-md-12">
                                @Html.DropDownListFor(model => model.userTypeID, new SelectList(ViewBag.userTypeID, "userTypeID", "userTypeName"), " User Type ", new { @class = "form-control" })

                                @Html.ValidationMessageFor(model => model.userTypeID, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.fullName, htmlAttributes: new { @class = "control-label" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.fullName, new { @class = "form-control" })

                                @Html.ValidationMessageFor(model => model.fullName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.userID, htmlAttributes: new { @class = "control-label" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.userID, new { @class = "form-control" })

                                @Html.ValidationMessageFor(model => model.userID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.mobile, htmlAttributes: new { @class = "control-label" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.mobile, new { @class = "form-control" })

                                @Html.ValidationMessageFor(model => model.mobile, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.AadharCardNumber, htmlAttributes: new { @class = "control-label" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.AadharCardNumber, new { @class = "form-control" })

                                @Html.ValidationMessageFor(model => model.AadharCardNumber, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-default" data-dismiss="modal">Close</button><input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}
<script src="/Scripts/jquery.validate.js"></script>
<script src="/Scripts/jquery.validate.unobtrusive.js"></script> 