@model electo.Models.enquiry

@using (Html.BeginForm("_partialEditEnquiry", "Enquiries", FormMethod.Post))
{

    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Enquirer Details</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="control-label" for="EnquirerName">Enquirer Name :</label>
                    @Html.TextBoxFor(model => model.enquirerName, htmlAttributes: new { @class = "form-control col-md-12" })
                </div>
                <div class="form-group">
                    <label class="control-label" for="Description">Description:</label>
                    @Html.TextBoxFor(model => model.enquiryDescription, htmlAttributes: new { @class = "form-control col-md-12" })
                </div>
                <div class="form-group">
                    <label class="control-label" for="Email">Email:</label>
                    @Html.TextBoxFor(model => model.email, htmlAttributes: new { @class = "form-control col-md-12" })
                </div>
                <div class="form-group">
                    <label class="control-label" for="Mobile">Mobile:</label>
                    @Html.TextBoxFor(model => model.mobile, htmlAttributes: new { @class = "form-control col-md-12" })
                </div>
                <div class="form-group">
                    <label class="control-label" for="RequestDate">Request Date:</label>
                    @Model.dataIsCreated.ToString("dd/MM/yyyy")
                </div>
                <div class="form-group">
                    <label class="control-label" for="MarkAsCompleted">Mark As Completed:</label>
                    @Html.CheckBoxFor(modelItem => modelItem.isTaskComplete)

                    @Html.HiddenFor(Model => Model.enquiryTypeID)
                    @Html.HiddenFor(Model => Model.enquiryID)

                    @Html.HiddenFor(Model => Model.dataIsUpdated, new { @readonly = "readonly" })
                    @Html.HiddenFor(Model => Model.modifiedBy, new { @readonly = "readonly" })
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-default" data-dismiss="modal">Close</button>
                <input type="submit" class="btn btn-default" name="save" value="Save" />
            </div>
        </div>
    </div>
}


