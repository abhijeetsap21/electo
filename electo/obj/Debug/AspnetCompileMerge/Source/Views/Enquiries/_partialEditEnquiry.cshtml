@model electo.Models.enquiry

@using (Html.BeginForm("_partialEditEnquiry", "Enquiries", FormMethod.Post))
{

    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                <table class="table-striped">
                    <thead>
                        <tr>
                            <th>
                                Enquirer Name
                            </th>
                            <th>
                                Enquiry Desscription
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Mobile
                            </th>
                            <th>
                                Request Date
                            </th>
                            <th>
                                Mark As Completed   
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @Html.TextAreaFor(Model => Model.enquirerName, new { @readonly = "readonly" })
                            </td>
                            <td>
                                @Html.TextAreaFor(Model => Model.enquiryDescription, new { @readonly = "readonly" })
                            </td>
                            <td>
                                @Html.TextAreaFor(Model => Model.email, new { @readonly = "readonly" })
                            </td>
                            <td>
                                @Html.TextAreaFor(Model => Model.mobile, new { @readonly = "readonly" })
                            </td>
                            <td>
                                
                                @Model.dataIsCreated.ToString("dd/MM/yyyy")
                            </td>
                            <td>
                                @Html.CheckBoxFor(modelItem => modelItem.isTaskComplete)<label>Mark As Competed</label>
                            </td>
                        </tr>
                    </tbody>
                </table>               
               
              
                @Html.HiddenFor(Model => Model.enquiryTypeID) 
                @Html.HiddenFor(Model => Model.enquiryID)              
                
                @Html.HiddenFor(Model => Model.dataIsUpdated, new { @readonly = "readonly" })    
                @Html.HiddenFor(Model => Model.modifiedBy, new { @readonly = "readonly" })            

            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-default"  data-dismiss="modal">Close</button>
                <input type="submit" class="btn btn-default" name="save" value="Save" />
            </div>
            <div>
                
            </div>
        </div>

    </div>
}


