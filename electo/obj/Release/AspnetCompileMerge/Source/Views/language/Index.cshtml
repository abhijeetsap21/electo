@model IEnumerable<electo.Models.language>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutInternal.cshtml";
}

<h2>Languages</h2>

<p class="create-btn">
    @Html.ActionLink("Create New", "Create", "", new { @class = "create-new" })
</p>
<div class="col-md-9 box-2 running-campaigns sidebar-right">
       
<table class="table table-striped">
    <tr>
        <th><img src="~/images/arrow.jpg" width="27" height="34"></th>
        <th>
            @Html.DisplayNameFor(model => model.language1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fontUsed)
        </th>
       
    </tr>
    @{    int i = 0; }
@foreach (var item in Model) {
    <tr>
        <td>@(i += 1)</td>
        <td>
            @Html.DisplayFor(modelItem => item.language1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fontUsed)
        </td>
       
    </tr>
}

</table>
</div> 
<script>

    $(document).ready(function () {
        debugger
        if ('@TempData["Result"]' != '') {
            if ('@TempData["Result"]' == "Success")

                bootbox.alert({
                    title: "Confirmation !",
                    message: '<p>Language created successfully</p>',
                    timeOut: 2000
                });

        }
    });
</script>