@model electo.Models.campaign

@using (Html.BeginForm("_partialActivateDeactiveateCampaign", "RunningCampaign", FormMethod.Post))
{

    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Activate Or Deactivate Campaign</h4>
            </div>
            <div class="modal-body">
                
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Campaign Name
                            </th>
                            <th>
                                Activate Or Deactivate
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>                                
                                @Html.DisplayFor(Model => Model.campaignName, new { @readonly = "readonly" })
                            </td>
                            <td>
                                @Html.CheckBoxFor(modelItem => modelItem.isActive)<label>Activate / Deactivate Campaign</label>
                            </td>
                        </tr>
                    </tbody>
                </table>
                
                    @Html.HiddenFor(Model => Model.campaignID)     
                @Html.HiddenFor(Model => Model.campaignName)
                                   
                     @Html.HiddenFor(Model => Model.electionTypeID)
                    @Html.HiddenFor(Model => Model.electionID)                
                    @Html.HiddenFor(Model => Model.politicalPartyID)
                    @Html.HiddenFor(Model => Model.lokSabhaConstituencyID)
                   @Html.HiddenFor(Model => Model.vidhanSabhaConstituencyID)  
                    @Html.HiddenFor(Model => Model.wardID)
                    
                    @Html.HiddenFor(Model => Model.volunteerID)
                     @Html.HiddenFor(Model => Model.dataIsCreated)
                     @Html.HiddenFor(Model => Model.dataIsUpdated)
                     @Html.HiddenFor(Model => Model.createdBy)
                     @Html.HiddenFor(Model => Model.modifiedBy)
                     @Html.HiddenFor(Model => Model.isOLD)
                     @Html.HiddenFor(Model => Model.isPaymentComplete)
                

            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-default" data-dismiss="modal">Close</button>
                <input type="submit" name="save" class="btn btn-default" value="Save" />
            </div>            
        </div>

    </div>
}

