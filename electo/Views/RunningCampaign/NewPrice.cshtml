@model electo.Models.campaignPrice

@using (Html.BeginForm("NewPrice", "RunningCampaign", FormMethod.Post))
{

    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">

                @Html.EditorFor(modelItem => modelItem.isActive)             
                <div class="form-group">
                    @*@Html.DropDownList("ElectionType", null, "Election Type", new { @class = "form-control" })*@             
                    @Html.DropDownListFor(model => model.electionTypeID, new SelectList(ViewBag.electionTypeID, "electionTypeID", "electionTypeNAME"), " Election  ", new { @class = "form-control"})
                    
                           
                </div>
                @Html.TextBoxFor(Model => Model.year)
                @Html.TextBoxFor(Model => Model.price)              


            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
            <div>
                <input type="submit" name="save" value="Save" />
            </div>
        </div>

    </div>
}


