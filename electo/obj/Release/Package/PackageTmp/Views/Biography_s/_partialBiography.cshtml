@model IEnumerable<electo.Models.sp_getAllBiographiesStartwithLetter_Result>
<table class="table table-striped">
    <thead>
    <tr>
        <th><img src="~/images/arrow.jpg" width="27" height="34"></th>
        <th>
            Person Name
        </th>
        <th>
           Image
        </th>
        <th>
           Biography
        </th>
     
        <th>
          Last update
        </th>
       
        <th></th>
    </tr>
    </thead>
    @{
        var a = Model.Count();

    }
    <tbody>
        @if (a == 0)
        {
            <tr>
                 <td colspan="6">
                    No Result Found
                </td>
            </tr>
        }



        @{    int i = 0; }
        @foreach (var item in Model)
        {
            <tr>
                <td>@(i += 1)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.personName)
                </td>
                <td>
                    <img id="pic" src='@item.image' alt="Image" width="100px" height="100px" />
                   
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.description)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.fullName) | @item.dataIsUpdated.ToString("dd/MM/yyyy")
                </td>
                
                <td>
                    <a class="btn btn-2 btn-defaul" href="@Url.Action("Edit", "Biography_s", new { id = item.BiographyID})">Edit</a>
                    @*@Html.ActionLink("Edit", "Edit?id = "+item.BiographyID ", "", routeValues: new { }, htmlAttributes:new { @class= "btn btn-default" })*@                 
                </td>
            </tr>
        }
    </tbody>
</table>