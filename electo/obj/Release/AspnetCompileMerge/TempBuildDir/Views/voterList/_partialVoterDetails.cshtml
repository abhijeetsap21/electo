@model IEnumerable<electo.Models.sp_GetVoters_List_Result>


<table class="table table-striped">
    <thead>
        <tr>
            <th><img src="~/images/arrow.jpg" width="27" height="34"></th>
            <th>Name</th>            
            <th>Father/Husband</th>
            <th>Data Created</th>
            <th>Complete Address</th>
            <th>Gender</th>
            <th>DOB</th>            
            <th>VoterID Number </th>
            <th>Area</th>
            <th>Ward</th>
            <th>Vidhan Sabha</th>
            <th>Lok Sabha</th>
           
            <th>State</th>
           
            <th>Edit</th>
                 
                   
        </tr>
    </thead>
    <tbody>

        @{  int i = 0; if (Model == null)
            {
                <tr>
                    <td colspan="14">No record found</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@(i += 1)</td>

                        <td>
                            @Html.DisplayFor(modelItem => item.voterName) @Html.DisplayFor(modelItem => item.voterLastName)
                          
                        </td>                        
                        <td>@Html.DisplayFor(modelItem => item.voterFather_HusbandName)</td>
                        <td>                             
                            @item.dataIsUpdated.ToString("dd/MM/yyyy")
                        </td>                                                
                        <td>
                            @Html.DisplayFor(modelItem => item.plotNo),@Html.DisplayFor(modelItem => item.streetNo),@Html.DisplayFor(modelItem => item.address1),@Html.DisplayFor(modelItem => item.address2),@Html.DisplayFor(modelItem => item.pincode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.gender)
                        </td>
                        <td>
                            @{var strdatetime = @item.dateOfBirth.HasValue ? @item.dateOfBirth.Value.ToString("dd/MM/yyyy") : string.Empty; }
                            @strdatetime                     
                           
                        </td>                        
                        <td>
                            @Html.DisplayFor(modelItem => item.voterIDNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.areaName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.wardName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.vidhanSabhaConstituencyName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.lokSabhaConstituencyName)
                        </td>
                      
                        <td>
                            @Html.DisplayFor(modelItem => item.stateName)
                        </td>
                                                
                        <td><a href="/voterList/Edit?id=@item.voterID" class="btn btn-defaul">Edit</a>
                        </td>
                    

                    </tr>
                                }
                            }
        }
    </tbody>
</table>