@model electo.Models.campaignPrice

@using (Html.BeginForm("_partialEditPrice", "RunningCampaign", FormMethod.Post))
{

    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">

                @Html.EditorFor(modelItem => modelItem.isActive)
                @Html.HiddenFor(Model => Model.campaignPriceID)
                
                @Html.HiddenFor(Model => Model.electionTypeID)
                @Html.TextBoxFor(Model => Model.electionType.electionTypeNAME, new { @readonly = "readonly" })
                @Html.TextBoxFor(Model => Model.year, new { @readonly = "readonly" })
                @Html.TextBoxFor(Model => Model.price)
                @Html.TextBoxFor(Model => Model.dataIsCreated, new { @readonly = "readonly" })              
                @Html.TextBoxFor(Model => Model.dataIsUpdated, new { @readonly = "readonly" }) 
                @Html.TextBoxFor(Model => Model.loginVolunteer.voterList.voterName, new { @readonly = "readonly" }) 
                @Html.TextBoxFor(Model => Model.loginVolunteer.voterList.voterName, new { @readonly = "readonly" })  
                @Html.HiddenFor(Model => Model.createdBy)
                @Html.HiddenFor(Model => Model.modifiedBy)
                             
                
                
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
            <div>
                <input type="submit" name="save" value="Save" />
            </div>
        </div>

    </div>
}


