
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutInternal.cshtml";
}

<div class="row">
    <div class="col-lg-10">
        <div class="col-lg-12 white-box">

            <div class="form-group">
                @Html.DropDownList("eventTypeID", null, " Activity/Event ", new { @class = "form-control" })
            </div>
            

            <div class="form-group">
                <input type="button" name="search" class="btn btn-defaul" value="Search" onclick="return searchResult();" />
            </div>
        </div>


        <div class="table-responsive col-lg-12" id="viewResult">
            <div class="col-lg-12 white-box">
                <p>Please use above search criteria to view the result list</p>
            </div>
        </div>
    </div>
</div>

<script>

    function searchResult() {
        debugger
      
        var eventTypeID = $("#eventTypeID").val();
       

        if (eventTypeID == "" ) {
            bootbox.alert({
                title: "Alert !",
                message: '<p>Please select  Activity/Event </p>',
                timeOut: 2000

            });
            return;
        }
        debugger
        $.ajax({
            url: '/CampaignActivity/_partialActivityList',
            type: 'POST',
            data: { 'eventTypeID': eventTypeID },
            success: function (data) {
                debugger
                $('#viewResult').html(data);

            }
        });
    }
</script>


