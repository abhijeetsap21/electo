@model electo.Models.language

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutInternal.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="col-md-9 box-2 running-campaigns sidebar-right">
        <div class="form-horizontal">
            <h4>Add Language</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-md-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.language1, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.language1, new { htmlAttributes = new { @class = "form-control", placeholder = "eg:English" } })
                        @Html.ValidationMessageFor(model => model.language1, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.fontUsed, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.fontUsed, new { htmlAttributes = new { @class = "form-control", placeholder = "eg: Arial" } })
                        @Html.ValidationMessageFor(model => model.fontUsed, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <div class="col-md-12 text-right">
                        @Html.ActionLink("Back to List", "Index", "", new { @class = "btn btn-default" })
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

